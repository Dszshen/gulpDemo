doctype html
html(lang='')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title 注册页面
        link(href='${request.contextPath}/assets/libs/bootstrap/dist/css/bootstrap.css?t=#{currTime}', rel='stylesheet', type='text/css')
        link(href='${request.contextPath}/assets/css/pages/register.css', rel='stylesheet', type='text/css')
        script(src='${request.contextPath}/assets/libs/jquery/dist/jquery.min.js?t=#{currTime}', type='text/javascript')
    body
        .register
            .container
                .register-headding
                    h2.register-title 请注册
                .register-form
                    .form-horizontal(role='form')
                        .form-body
                            .form-group
                                label.col-md-2.control-label 名称:
                                .col-md-6
                                    input.form-control(type='text', placeholder='名称')
                                    // span.help-block  数据库地址.
                            .form-group
                                label.col-md-2.control-label 地址:
                                .col-md-6
                                    input.form-control(type='text', placeholder='地址')
                                    // span.help-block  数据库地址.
                            .form-group
                                label.col-md-2.control-label 规模:
                                .col-md-6
                                    input.form-control(type='text', placeholder='公司规模')
                            .form-group
                                label.col-md-2.control-label 主营业务:
                                .col-md-6
                                    input.form-control(type='text', placeholder='主营业务')
                            .form-group
                                label.col-md-2.control-label 座机:
                                .col-md-6
                                    input.form-control(type='text', placeholder='座机')
                            .form-group
                                label.col-md-2.control-label 法人:
                                .col-md-6
                                    input.form-control(type='text', placeholder='法人')
                            .form-group
                                label.col-md-2.control-label 年限:
                                .col-md-6
                                    input.form-control(type='text', placeholder='年限')
                            .form-group
                                label.col-md-2.control-label 备注:
                                .col-md-6
                                    textarea.form-control(rows='5', placeholder='备注')
                        .form-actions
                            button.btn.blue(type='submit') 确定
                            button.btn.default(type='button') 取消






