// BEGIN MAIN CONTENT
.row
    ui-view
    .col-md-12
        // BEGIN EXAMPLE TABLE PORTLET
        .portlet.light.bordered
            .portlet-title
                .caption.font-dark
                    i.icon-settings.font-dark
                    span.caption-subject.bold.uppercase  角色列表
                .actions
                    .btn-group.btn-group-devided(data-toggle='buttons')
                        label.btn.btn-transparent.dark.btn-outline.btn-circle.btn-sm.active
                            input#option1.toggle(type='radio', name='options')
                            | Actions
                        label.btn.btn-transparent.dark.btn-outline.btn-circle.btn-sm
                            input#option2.toggle(type='radio', name='options')
                            | Settings
            .portlet-body
                .table-toolbar
                    .row
                        .col-md-6
                            .btn-group
                                a#addRole.btn.sbold.green(href="#/system/role/add")
                                    i.fa.fa-plus
                                    | 新增角色
                        .col-md-6
                            .btn-group.pull-right
                                button.btn.green.btn-outline.dropdown-toggle(data-toggle='dropdown')
                                    | 更多功能
                                    i.fa.fa-angle-down
                                ul.dropdown-menu.pull-right
                                    li
                                        a(href='javascript:;')
                                            i.fa.fa-print
                                            |  打印
                                    li
                                        a(href='javascript:;')
                                            i.fa.fa-file-pdf-o
                                            |  保存为PDF
                                    li
                                        a(href='javascript:;')
                                            i.fa.fa-file-excel-o
                                            |  导出为Excel
                table#tableList.table.table-striped.table-bordered.table-hover.table-checkable.order-column
                    thead
                        tr
                            th
                                input.group-checkable(type='checkbox', data-set='#tableList .checkboxes')
                            th  角色名称
                            th  角色英文名称
                            th  角色生成时间
                            th  角色更新时间
                            th  角色禁用时间
                            th  角色状态
                            th  配置权限
                            th  操作
                    tbody
                        tr.odd.gradeX(ng-repeat="role in roles")
                            td
                                input.checkboxes(type='checkbox', value='1')
                            td  {{role.role_cn}}
                            td  {{role.role_en}}
                            td  {{role.createTime | date:'yyyy-MM-dd HH:mm:ss'}}
                            td  {{role.updateTime | date:'yyyy-MM-dd HH:mm:ss'}}
                            td  {{role.forbidTime | date:'yyyy-MM-dd HH:mm:ss'}}
                            td
                                input.make-switch(type='checkbox', checked='', data-size="small", data-on-color='info', data-off-color='success' data-on-text="启用", data-off-text="禁用")
                            td.center
                                button.btn.btn-xs.btn-success(ng-click="addPermission();") 配置权限
                            td
                                button.btn.btn-xs.btn-success 编辑
                                button.btn.btn-xs.btn-danger 删除
